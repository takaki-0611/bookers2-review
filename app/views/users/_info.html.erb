<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user.following_user.count, follows_user_path(user.id) %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user.follower_user.count, followers_user_path(user.id) %>
    </th>
  </tr>
</table>

<div class="btn col-8 mx-auto">
  <% unless current_user == user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :DELETE, class: "btn btn-info btn-sm btn-block mb-3" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success btn-sm btn-block mb-3" %>
    <% end %>
  <% end %>
</div>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>