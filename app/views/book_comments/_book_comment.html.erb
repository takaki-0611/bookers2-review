<h2>Book Comments</h2>
<% book.book_comments.each do |book_comment| %>
  <table class='table'>
    <tr>
  		<td>
  		  <p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></p>
  		  <p><%= book_comment.user.name %></p>
  		</td>
  		<td><%= book_comment.comment %></td>
  		<td>
  		  <% if book_comment.user == current_user %>
  		    <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
  		  <% end %>
  		</td>
    <tr>
  </table>
<% end %>